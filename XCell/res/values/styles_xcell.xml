<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Xcell" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_xcell</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Xcell</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Xcell</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Xcell</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Xcell</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Xcell</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_xcell</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_xcell</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Xcell</item>
        
        
    </style>

    <style name="ActionBar.Solid.Xcell" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_xcell</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_xcell</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_xcell</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Xcell</item>
    </style>

    <style name="ActionBar.Transparent.Xcell" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_xcell</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Xcell</item>
    </style>

    <style name="PopupMenu.Xcell" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_xcell</item>	
    </style>

    <style name="DropDownListView.Xcell" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_xcell</item>
    </style>

    <style name="ActionBarTabStyle.Xcell" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_xcell</item>
    </style>

    <style name="DropDownNav.Xcell" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_xcell</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_xcell</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_xcell</item>
    </style>
    
    <style name="ProgressBar.Xcell" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_xcell</item>
    </style>
    
    <style name="ActionButton.CloseMode.Xcell" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_xcell</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Xcell.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Xcell</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Xcell</item>
    </style>

</resources>
